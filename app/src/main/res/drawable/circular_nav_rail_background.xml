<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the item is selected -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/selected_item_color" />
            <size android:width="56dp" android:height="56dp" />
            <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/> <!-- Padding for circular background -->

        </shape>
    </item>

    <!-- Default state (unselected) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/selected_item_color" />
            <size android:width="56dp" android:height="56dp" />
            <padding android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp"/> <!-- Padding for circular background -->

        </shape>
    </item>
</selector>
